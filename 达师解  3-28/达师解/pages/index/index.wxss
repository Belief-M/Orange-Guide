/* pages/index/index.wxss */
.header{
    position: relative;
}
.header-img{
    width: 100%;
}
.search{
    position: absolute;
    border: 1px solid #ececec;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    bottom: 30rpx;
    border-radius: 15rpx;
    left:50%;
    transform: translate(-50%, -50%);
    overflow: hidden;
     background: #fff;
     height: 60rpx;
}
.header-input{
    flex: 1;
    width: 70%;
    padding-left: 30rpx;
    font-size: 30rpx;
    color:rgba(0,0,0,0.5);
}
.hreader-icon{
    margin: 0rpx 15rpx;
}

.scenicsList{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-bottom:30rpx;
}
.scenic_spot{
    width: 31%;
    height:200rpx;
    margin-bottom: 15rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.scenic_spot .scenic_img{
    width: 100%;
    height: 100%;  
}
.scenic_name{
    position: absolute;
    bottom: 10rpx;
    font-size: 35rpx;
    width: 100%;
    text-align: center;
    color: #fff;
}
.hoverClass{
    border: 1rpx solid #ececec;
}