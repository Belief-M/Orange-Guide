/* pages/searchScenics/searchScenics.wxss */
.search{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid rgba(0,0,0,0.5);
    width: 95%;
    margin:0 auto;
    margin-top: 20rpx;
    border-radius: 15rpx;
    font-size: 30rpx;
    height: 60rpx;
}
.search .search-input{
    flex: 1;
    padding-left: 15rpx;
}
.search .search-icon{
    margin: 0 10rpx;
}
.cancel{
    margin-right: 15rpx;
    color: #EEC591;
}
.scenicsList .scenicsList_item{
    margin: 20rpx auto;
    width: 90%;
    color:rgba(0,0,0,0.5);
    height: 60rpx;
    padding: 15rpx 0;
    background: #EEC591;
    border-radius: 10rpx;
    padding-left: 15rpx;
}
.searchList{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin:30rpx 0rpx;
}

.scenic_spot{
    width: 31%;
    height:200rpx;
    margin-bottom: 15rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.scenic_spot .scenic_img{
    width: 100%;
    height: 100%;  
}
.scenic_name{
    position: absolute;
    bottom: 10rpx;
    font-size: 35rpx;
    width: 100%;
    text-align: center;
    color: #fff;
}